<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    >

    <TextView
        style="@style/header_style"
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_endoscope_icon"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/welcome"
        />

    <ImageView
        android:id="@+id/iv_endoscope_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/endoscope_icon_height"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:src="@drawable/endoscope_icon"
        />

    <ImageView
        android:id="@+id/iv_endoscope_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/endoscope_text_height"
        android:layout_below="@id/iv_endoscope_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/endoscope_icon_text"
        />

    <TextView
        style="@style/text_style"
        android:id="@+id/tv_description"
        android:layout_below="@id/iv_endoscope_text"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="@dimen/fragment_tutorial_horizontal_margin"
        android:paddingRight="@dimen/fragment_tutorial_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/ht_welcome_desc"
        />

</RelativeLayout>