<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/start_stream_background"
    >

    <TextView
        style="@style/header_style"
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_wifi_icon"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/header_enable_wifi"
        />

    <ImageView
        android:id="@+id/iv_wifi_icon"
        android:layout_width="@dimen/wifi_icon_width"
        android:layout_height="@dimen/wifi_icon_height"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_wifi"
        />

    <TextView
        style="@style/text_style"
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_wifi_icon"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/fragment_tutorial_horizontal_margin"
        android:paddingRight="@dimen/fragment_tutorial_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/ht_wi_fi_enabled"
        />
</RelativeLayout>